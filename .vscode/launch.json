{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug pit",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/pit",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set C++ standard for debugging",
          "text": "set language c++",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
